{
  "name": "@ethicdevs/fastify-custom-session",
  "version": "0.4.0",
  "description": "A Fastify (v3.x+) plugin that let you use session and decide only where to load/save from/to",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "EthicDevs",
    "email": "contact@ethicdevs.com",
    "url": "https://ethicdevs.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ethicdevs/fastify-custom-session"
  },
  "keywords": [
    "fastify",
    "v3.x",
    "plugin",
    "session",
    "custom",
    "adapter"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "ci": "run-s test build",
    "dev": "nodemon -w .env -w .env.local -w . -x 'run-s typecheck start:dev'",
    "start": "NODE_ENV=production node ./dist/index.js",
    "start:dev": "NODE_ENV=development ts-node ./src/index.ts",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "fastify-plugin": "^3.0.1"
  },
  "devDependencies": {
    "@fastify/cookie": "6.0.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/pg": "^8.6.5",
    "@types/pg-pool": "^2.0.3",
    "fastify": "^3.27.4",
    "firebase-admin": "^11.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "pg": "^8.7.3",
    "pg-pool": "^3.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tslib": ">=2.4.0",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "@fastify/cookie": "6.0.0",
    "fastify": "^3.27.4",
    "tslib": ">=2.4.0"
  },
  "optionalDependencies": {
    "firebase-admin": ">=11.0.0",
    "pg": ">=8.7.3",
    "pg-pool": ">=3.5.1"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn ci"
    }
  }
}
